<div class="container">
    <div class="col-sm-6 col-sm-offset-3">
    <div>{{createError}}</div>

    <form method="post" class="form-horizontal">
        <fieldset>
            <legend>New {{type}} loader</legend>
        {{#if externalCreateForm}}
            {{> create-forms }}
        {{else}}
            {{{form}}}
        {{/if}}
        <div class="form-group">
            <div class="col-md-6 control-label"></div>
            <div class="col-md-2">
                <button id="button-submit" type="submit" class="btn btn-success">Create</button>
            </div>
        </div>
        </fieldset>
    </form>
    </div>
</div>